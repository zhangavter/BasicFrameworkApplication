<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/layotu_mode_photo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <zhang.acfun.com.basicframeworklib.view.PercentImageView
            android:id="@+id/iv_photo_lpsi"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:isSquare="true"
            app:placeholderImage="@drawable/select_back" />

        <zhang.acfun.com.basicframeworklib.view.ChooseButton
            android:id="@+id/cb_photo_lpsi"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="top|right"
            android:duplicateParentState="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:paddingBottom="10dp"
            app:cb_check_img="@drawable/ic_choice_gougou_check"
            app:cb_check_text_color="@color/white"
            app:cb_check_text_size="16"
            app:cb_normal_img="@drawable/ic_choice_xuankuang_icon" />

        <TextView
            android:id="@+id/tv_GIF"
            style="@style/picFlag"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:visibility="gone" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/layout_mode_camera"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/C6"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="18dp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/sure"
            app:srcCompat="@drawable/ic_tips_icon_shot" />

        <View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true" />
    </RelativeLayout>

</FrameLayout>